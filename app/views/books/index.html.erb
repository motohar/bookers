
<p id="notice"></p>
<h1>Books</h1>
<table>
<thead>
<tr>


<th>Title</th>
<th>Body</th>
</tr>
</thead>
</table>

<% @books.each do |book| %>

<td><%= book.title %></td>
<td><%= book.body %></td>

<%=link_to "Show",books_path(book.id) %>
<%=link_to "Edit",edit_book_path(book.id) %>
<%=link_to "destroy",books_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>

</thead>
</table>

<th>Title</th>
<th>Body</th>
<th colspan="3"></th>
</tr>
</thead>
</table>





<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

<h4>タイトル<h4>
<%= f.text_field :title %>

<h4>本文</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>

<% end %>




